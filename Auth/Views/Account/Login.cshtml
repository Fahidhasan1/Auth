@model Auth.Models.LoginViewModel
@{
    ViewData["Title"] = "User Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Welcome Back!</h4>
                    <p class="small mb-0">Please sign in to continue</p>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post" asp-controller="Account">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-success px-4">Login</button>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">Register</a>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center text-muted small">
                    © @(DateTime.Now.Year) Auth Portal
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
