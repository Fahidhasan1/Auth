@model Auth.Models.EditRoleViewModel
@{
    ViewData["Title"] = "Edit User Role";
    var roles = ViewBag.Roles as List<string>;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Edit User Role</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditRole" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Current Role</label>
                            <input asp-for="CurrentRole" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Select New Role</label>
                            <select asp-for="SelectedRole" class="form-select">
                                @foreach (var role in roles)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Update Role</button>
                            <a href="/Account/UserList" class="btn btn-secondary ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
